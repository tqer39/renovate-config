{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "addLabels": ["terraform"],
      "automerge": true,
      "groupName": "terraform",
      "matchManagers": [
        "terraform"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "matchPackageNames": ["aws", "github", "vercel"]
    }
  ]
}
