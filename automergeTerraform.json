{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "addLabels": ["terraform"],
      "automerge": true,
      "groupName": "terraform",
      "matchManagers": [
        "terraform",
        "regex"
      ],
      "matchPackageNames": ["aws", "github", "vercel"],
      "matchDepTypes": [
        "required_version"
      ]
    }
  ]
}
