{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "regexManagers": [
    {
      "fileMatch": [
        "^.tool-versions$"
      ],
      "matchStrings": [
        "terraform (?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "hashicorp/terraform",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ],
  "packageRules": [
    {
      "automerge": true,
      "major": {
        "automerge": false
      },
      "minor": {
        "automerge": false
      },
      "matchManagers": [
        "terraform"
      ]
    },
    {
      "automerge": true,
      "major": {
        "automerge": false
      },
      "minor": {
        "automerge": false
      },
      "groupName": "terraform",
      "matchManagers": [
        "regex"
      ]
    },
    {
      "automerge": true,
      "major": {
        "automerge": false
      },
      "minor": {
        "automerge": false
      },
      "groupName": "terraform",
      "matchManagers": [
        "terraform"
      ],
      "matchDepTypes": [
        "required_version"
      ]
    }
  ]
}
