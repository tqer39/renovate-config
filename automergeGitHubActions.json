{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "addLabels": [
        "github-actions"
      ],
      "automerge": true,
      "major": {
        "automerge": false
      },
      "matchManagers": [
        "github-actions"
      ]
    },
    {
      "addLabels": [
        "github-actions"
      ],
      "matchPackageNames": [
        "actions/checkout",
        "aws-actions/configure-aws-credentials",
        "terraform-linters/setup-tflint"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": true
    }
  ]
}
