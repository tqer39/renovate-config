{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "addLabels": [
        "pre-commit"
      ],
      "automerge": true,
      "major": {
        "automerge": false
      },
      "minor": {
        "automerge": false
      },
      "matchManagers": [
        "pre-commit"
      ]
    },
    {
      "matchPackageNames": [
        "adrienverge/yamllint",
        "antonbabenko/pre-commit-terraform",
        "igorshubovych/markdownlint-cli",
        "renovatebot/pre-commit-hooks",
        "streetsidesoftware/cspell-cli"
      ],
      "minor": {
        "automerge": true
      }
    }
  ]
}
