{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "addLabels": [
        "pre-commit"
      ],
      "automerge": true,
      "major": {
        "automerge": false
      },
      "minor": {
        "automerge": false
      },
      "matchManagers": [
        "pre-commit"
      ]
    },
    {
      "matchPackageNames": ["renovatebot/pre-commit-hooks"],
      "minor": {
        "automerge": true
      }
    }
  ]
}
