{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "addLabels": [
        "github-actions"
      ],
      "automerge": true,
      "matchManagers": [
        "github-actions"
      ]
    },
    {
      "groupName": [
        "GitHub Page Actions"
      ],
      "addLabels": [
        "github-actions",
        "GitHub Pages"
      ],
      "automerge": true,
      "matchUpdateTypes": [
        "major"
      ],
      "matchPackageNames": [
        "actions/configure-pages",
        "actions/deploy-pages"
      ]
    }
  ]
}
